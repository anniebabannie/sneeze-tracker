generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sneeze {
  id        String   @id @default(cuid())
  intensity Int      // 1-5 rating
  date      DateTime @default(now())
  location  String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
